{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QuietPatch Manifest",
  "type": "object",
  "required": ["version","channel","files","released","min_os"],
  "properties": {
    "version": { "type": "string" },
    "channel": { "type": "string", "enum": ["stable","beta","canary"] },
    "released": { "type": "string", "format": "date-time" },
    "min_os": {
      "type": "object",
      "properties": {
        "macos": { "type": "string" },
        "windows": { "type": "string" },
        "linux": { "type": "string" }
      }
    },
    "rollout": { "type": "integer", "minimum": 0, "maximum": 100 },
    "files": {
      "type": "array",
      "items": {
        "type":"object",
        "required":["os","arch","url","sha256","sig"],
        "properties":{
          "os":{"type":"string","enum":["macos","windows","linux"]},
          "arch":{"type":"string","enum":["arm64","x64"]},
          "url":{"type":"string","format":"uri"},
          "sha256":{"type":"string","pattern":"^[a-f0-9]{64}$"},
          "sig":{"type":"string"} 
        }
      }
    },
    "notes": { "type":"string" }
  }
}









